<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @product.product_name %>
    </h2>
    <div class='item-img-content'>
      <%= image_tag @product.image, class:"item-box-img" %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        <%= "#{@product.price}円" %>
      </span>
    </div>
    <% if current_user.role == 'admin' %>
      <%= link_to '商品の編集', edit_product_path, method: :get, class: "item-btn" %>
      <p class='or-text'>or</p>
      <%= link_to '削除', product_path(@product), method: :delete, class: "item-btn" %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to '購入画面に進む', root_path, method: :get, class:"item-btn" %>
    <% end %>
  </div>
  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の商品
    </a>
    <a href="#" class="change-item-btn">
      後ろの商品 ＞
    </a>
  </div>
</div>